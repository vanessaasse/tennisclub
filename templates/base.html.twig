<!DOCTYPE html>
<html>
    <head>

        <meta charset="UTF-8">
        <title>{% block title %}Tennis Club de Teyran{% endblock %}</title>

        {% block stylesheets %}
            <!-- Bootstrap & fontawesome -->
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
                  integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css"
                  integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">

            <!-- Custom fonts for this template -->
            <link href="https://fonts.googleapis.com/css?family=Comfortaa" rel="stylesheet" type='text/css'>

            <!-- Custom styles for this template-->
            <link href="{{ asset('assets/css/style.css') }}" rel="stylesheet">
        {% endblock %}

    </head>

    <body>
    <div class="container-fluid">
        <nav class="nav">

                <div class="col-10">
                <a class="navbar-brand" href="{{ path('homepage') }}"><img src="{{ asset
                        ('assets/img/TennisClub_Teyran_330pp - 100px - banniere-site.png')
                    }}" alt="tennis-club-teyran"> Tennis Club de Teyran</a>
                </div>

            <!-- Button menuModal -->
                <div class="col-1">
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#menuModal">
                Menu
                </button>
                </div>


            <!-- Button Search -->
                <div class="col-1">
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#searchModal">
                    <i class="fa fa-search"></i> Recherche
                </button>
                </div>


            <!-- menuModal -->
            <div class="modal fade" id="menuModal" tabindex="-1" role="dialog" aria-labelledby="menuModalTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-body">

                            <div class="row">
                                <div class="col-12">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-5">
                                    <ul class="nav flex-column"  id="v-pills-tab" role="tablist" aria-orientation="vertical">
                                        <li class="nav-item">
                                            <a class="nav-link" href="{{ path('homepage') }}">Accueil</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" data-toggle="pill" href="#v-pills-club">Le club</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" data-toggle="pill" href="#v-pills-ecole-tennis">L'école de tennis</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link"  href="{{ path('page.show', {'slug' :
                                                'nos-differentes-offres'}) }}">Tennis Adulte</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" data-toggle="pill" href="#v-pills-competitions">Compétitions</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" data-toggle="pill" href="#v-pills-evenements">Evènements</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" data-toggle="pill" href="#">Réservez un court</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="{{ path('contact') }}">Contactez-nous</a>
                                        </li>
                                    </ul>
                                </div>

                                <div class="col-7">
                                    <div class="nav flex-column tab-content" id="v-pills-tabContent">
                                        <!-- Bloc liens de l'onglet "Le club" -->
                                        <div class="tab-pane fade" id="v-pills-club" role="tabpanel" aria-labelledby="v-pills-club">
                                            <li class="nav-item">
                                                <a class="nav-link" href="{{ path('page.show', {'slug' :
                                                    'presentation-du-club'}) }}">Présentation</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="{{ path('page.show', {'slug' :
                                                    'lhistorique-du-club'}) }}">L'historique du
                                                    club</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="{{ path('page.show', {'slug' :
                                                    'les-partenaires-du-club'}) }}">Les partenaires</a>
                                            </li>
                                        </div>

                                        <!-- Bloc liens de l'onglet "L'école de tennis" -->
                                        <div class="tab-pane fade" id="v-pills-ecole-tennis" role="tabpanel" aria-labelledby="v-pills-ecole-tennis">
                                            <li class="nav-item">
                                                <a class="nav-link" href="{{ path('page.show', {'slug' :
                                                    'presentation-de-lecole-de-tennis'}) }}">Présentation de l'école</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="{{ path('page.show', {'slug' :
                                                    'lequipe-pedagogique-et-les-horaires-dentrainement'}) }}">L'équipe pédagogique et les horaires d'entraînement</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="{{ path('page.show', {'slug' :
                                                    'tarifs-et-inscription'}) }}">Tarifs et inscription</a>
                                            </li>
                                        </div>

                                        <!-- Bloc liens de l'onglet "Compétitions" -->
                                        <div class="tab-pane fade" id="v-pills-competitions" role="tabpanel" aria-labelledby="v-pills-competitions">
                                            <li class="nav-item">
                                                <a class="nav-link" href="{{ path('page.show', {'slug' :
                                                    'tournois-jeunes'}) }}">Tournois jeunes</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="{{ path('page.show', {'slug' :
                                                    'tournois-adultes'}) }}">Tournois adultes</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="{{ path('page.show', {'slug' :
                                                    'championnats-par-equipe'}) }}">Championnats par équipe</a>
                                            </li>
                                        </div>

                                        <!-- Bloc liens de l'onglet "Evènement" -->
                                        <div class="tab-pane fade" id="v-pills-evenements" role="tabpanel" aria-labelledby="v-pills-evenements">
                                            <li class="nav-item">
                                                <a class="nav-link" href="{{ path('event.list') }}">Agenda</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="{{ path('article.list') }}">Actualités</a>
                                            </li>
                                        </div>

                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <!-- End menuModal -->

            <!-- SearchModal -->
            <div class="modal fade" id="searchModal" tabindex="-1" role="dialog" aria-labelledby="searchModalTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-body">

                            <div class="row">
                                <div class="col-12">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            </div>


                            <form class="form-inline">
                                <input class="form-control col-10 mr-sm-1" type="search"
                                       placeholder="Que recherchez-vous ?"
                                       aria-label="Search">
                                <button class="btn btn-outline-success col-1 px-2" type="submit">Go</button>
                            </form>


                        </div>
                    </div>
                </div>
            </div>

            <!-- End searchModal -->


        </nav>
    </div>


        {% block body %}
        {% endblock %}


        <footer>
            <div class="container">
                <hr/>
                <div class="row">

                    <div class="col-1"></div>
                    <div class="col-7">
                       Tennis Club de Teyran - Chemin de Couquerolles - 34820 Teyran<br/>
                        Tél. : 04 67 70 16 93
                    </div>

                    <div class="col-3">
                        <a href="https://www.facebook.com/teyran.tennisclub/" target="_blank">Suivez-nous sur
                            Facebook <i class="fab fa-facebook"></i></a>
                    </div>

                    <div class="col-1"></div>

                </div>

            </div>
        </footer>

        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"
                    integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
        {% endblock %}

    </body>
</html>
