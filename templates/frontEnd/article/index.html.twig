{% extends 'base.html.twig' %}

{% block title %}
    Actualités du club - {{ parent() }}
{% endblock %}


    {% block body %}

        <div class="jumbotron jumbotron-fluid">
            <div class="container">
                <h1>Actualité du club</h1>
            </div>
        </div>

        <div class="container">
            <div class="row">
                {% for article in listArticles %}
                    <div class="col-lg-3">
                        {{ article.createdAt | date("d/m/Y") }}
                    </div>

                    <div class="col-lg-9">
                        <a href="{{ path('article.show', {'slug' : article.slug}) }}">{{ article.title }}</a><br/>
                        {{ article.content | easyadmin_truncate(200) | raw }}
                        <a href="{{ path('article.show', {'slug' : article.slug}) }}">[Lire la suite]</a>
                    </div>

                {% endfor %}
            </div>





        </div>





    {% endblock %}
