{% extends "base.html.twig" %}

    {% block title %}
        {{ pageCategory.name}} - {{ parent() }}
    {% endblock %}


    {% block body %}

        <div class="jumbotron jumbotron-fluid">
            <div class="container">
                <div class="pagecategory-subtitle">
                <h1>{{ pageCategory.name }}</h1>
                </div>
            </div>
        </div>


        <div class="container">
            {% for page in pageCategory.pages %}

                <div class="list-pages">
                    <a href="{{ path('page.show', {'slug' : page.slug}) }}"><h2><i class="fas fa-layer-group"></i> {{
                            page.title }}</h2></a>
                {{ page.content | easyadmin_truncate(200) | raw }} <a href="{{ path('page.show', {'slug' : page
                        .slug}) }}">Lire la suite</a>
                </div>
            {% endfor %}
        </div>

    {% endblock%}